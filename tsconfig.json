{
  // 指定此配置文件继承自其他配置文件
  "extends": "./tsconfig.base.json",
  // 指定需要包含的文件或目录
  "include": ["./src/**/*"],
  // 指定编译选项
  "compilerOptions": {
    // 没啥意义，防止覆盖inputFile
    "outDir": "./dist",
    // 是否生成声明文件（.d.ts）
    "declaration": false,
    // 是否解析 JSON 文件中的模块
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@hooks": ["src/hooks/index.ts"],
      "@components": ["src/components/index.ts"]
    },
  }
}
